---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "关于";

const identity = {
  name: "lee",
  age: 31,
  job: "develper",
  hobby: "exploring cuting-edge technologies",
};

const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "TypeScript",
  "React",
  "Vue",
  "Next.js",
  "Astro",
  "Node.js",
  "Koa",
  "express",
  "CSharp",
  "Python",
  "Java",
  "MySQL",
  "MongoDB",
];

const happy = true;
const finished = false;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
  <h2>Basis</h2>
  <ul>
    <li>姓名：{identity.name}</li>
    <li>年龄：{identity.age}</li>
    <li>职业：{identity.job}</li>
    <li>爱好：{identity.hobby}</li>
  </ul>
  <h2>Skills</h2>
  <ul>
    {
      skills.map((skill) => {
        return <li class="skill">{skill}</li>;
      })
    }
  </ul>
  {happy && <p>I'm happy to know you!</p>}
  {!finished && <p>I'm still on road to explore new technologies.</p>}
</BaseLayout>

<style define:vars={{ skillColor, fontWeight, textCase }}>
  .skill {
    color: var(--skillColor);
    font-weight: var(--fontWeight);
    text-transform: var(--textCase);
  }
  :global(.dark) li.skill {
    color: #fff;
  }
</style>
