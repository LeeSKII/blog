const pageTitle = "About";

const identity = {
  name: "Ski Lee",
  birth: 1993,
  job: "Developer",
  hobby: "Exploring cuting-edge technologies",
};

const skills = [
  "HTML",
  "CSS",
  "JavaScript",
  "TypeScript",
  "React",
  "Vue",
  "Next.js",
  "Astro",
  "Node.js",
  "Koa",
  "express",
  "CSharp",
  "Python",
  "Java",
  "MySQL",
  "MongoDB",
