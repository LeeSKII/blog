---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@/components/blog/Header.astro";
import Footer from "@/components/blog/Footer.astro";
import TypographyH1 from "@/components/typography/TypographyH1.astro";

const { pageTitle } = Astro.props;
---

<BaseLayout>
  <Header />
  <TypographyH1 className="capitalize" animate="slide">
    {pageTitle}
  </TypographyH1>
  <slot />
  <Footer />
</BaseLayout>
