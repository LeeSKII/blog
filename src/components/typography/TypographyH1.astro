---
import type { IAnimateProps, IClassNameProps } from "@/types";

type Props = IAnimateProps & IClassNameProps;
const { animate = "fade", className } = Astro.props;
import { cn } from "@/lib/utils";
---

<h1
  transition:animate={animate}
  class={cn(
    "scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl",
    className
  )}
>
  <slot />
</h1>
