---
interface Props {
  url: string;
  title: string;
  pubDate: Date;
}
const { url, title, pubDate } = Astro.props;
---

<a class="blog-post" href={url}>
  <div>
    <span>{title}</span>
    <span class="date">{pubDate.toLocaleDateString()}</span>
  </div>
</a>

<style>
  div {
    list-style: none;
    padding: 1rem;
    border: solid 1px #ccc;
    border-radius: 0.5rem;
    font-weight: 700;
    font-size: large;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  div:hover {
    background-color: #f2f2f2;
  }

  .date {
    font-size: small;
    font-weight: 300;
  }
  :global(.dark) .blog-post {
    color: #fff;
  }
  :global(.dark) div:hover {
    background-color: #333;
  }
</style>
